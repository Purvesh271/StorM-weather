<%- include("includes/head.ejs") %>
<body style="background-image: url(https://images.unsplash.com/photo-1584267385494-9fdd9a71ad75?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);
background-size: cover;">
    <h1 class="heading">Welcome to storm weather app</h1>
    <div class="home">
        
        <div class="box">
            <form action="/" method="get">
                <input type="text" name="city" placeholder="City Name">
                <button type="submit">Search</button>
            </form>
            <div class="weatherinfo">
                <% if(weather){ %>
                    <p style="display: flex; align-items: center; flex-direction: column; font-size: 1.5rem;">
                        <%= `It's ${((weather.main.temp - 32) * 5/9)} Â°C in ${weather.name}!`; %></p>
                <% } %>
          
                <% if(error){ %>
                    <p style="display: flex; align-items: center; flex-direction: column; font-size: 1.5rem;"><%= error %></p>
                <% } %>
            </div>

        </div>
        
    </div>

</body>
</html>